    // adding program and runtimeexecutable for debugging electron, just hit f5
    "version": "0.2.0",
    "configurations": [{
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceRoot}/src/main.js",
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd",
        "runtimeArgs": [
            ".",
            "--enable-logging"
        ],
        "env": {}
    }]
}